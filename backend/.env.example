# Server
PORT=5001

# Database
MONGO_URI=mongodb+srv://<db_username>:<db_password>@aggies.nrepstp.mongodb.net/<database_name>?retryWrites=true&w=majority

# Auth
JWT_SECRET=replace-with-strong-secret

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# (Optional) CORS
# CORS_ORIGIN=http://localhost:5173

# Public site base URL (used when generating links for social posts)
PUBLIC_SITE_URL=https://aggiesattic.org

# Facebook / Meta Graph API
# Use mode switching if you want separate dev/prod page credentials.
FACEBOOK_MODE=dev
FACEBOOK_GRAPH_VERSION=v24.0

# Dev
FACEBOOK_PAGE_ID_DEV=
FACEBOOK_PAGE_ACCESS_TOKEN_DEV=

# Prod
FACEBOOK_PAGE_ID_PROD=
FACEBOOK_PAGE_ACCESS_TOKEN_PROD=
